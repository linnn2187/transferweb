<!-- 解答&留言區(管理者) -->
<!-- 使用layout模板 -->
<% layout('layout') %>
<link rel="stylesheet" href="/css/solution.css">
<section class="jumbotron text-center">
    <div class="container">     
        <!-- 問題區塊 -->              
        <div class="card mt-4">
            <div class="card-body">
                <div class="card-title"><%= data[0].TITLE %>
                    <p class="card-subtitle text-muted mb-2" id="subject"><%= data[0].SUBJECT %></p>
                </div>                    
                <div class="card-text mb-2" id="author"><%= data[0].AUTHOR %></div>
                <span>
                    <p id="question"><%- data[0].QUESTION %></p>
                    <img src="<%= data[0].FILENAME %>">
                </span>
            </div>
        </div>
        <!-- 輸入解答區塊 -->
        <div class="card mt-4">
            <h5 class="card-header">留下您的解答</h5>
            <div class="card-body">
                <form method="POST">
                    <input type="hidden" name="postID" value="<%= data[0].ID%>">
                    <div class="form-group">
                        <input class="form-control" name="username" placeholder="請輸入您的暱稱"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="3" name ="comment" placeholder="請輸入您的解答"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">提交</button>
                </form>
            </div>
        </div>
        <!-- 顯示上傳者們的留言 -->
        <div class="container mt-3">
            <% for ( var i = 0 ; i < comment.length ; i++){ %>
                <div class="media border p-3">
                    <img class="d-flex mr-3" src="/img/comment.png">                   
                    <div class="media-body">
                        <h5 class="mt-0">
                        <p id = "ansAuthor"><%= comment[i].AUTHOR %></p>
                        <p id = "ansComment"><%= comment[i].COMMENT %></p>
                        <a class="btn btn-danger delete pull-right" onclick="return alert('Are You sure?')" href="/adminSolutioned/<%=comment[i].ID%>">刪除</a>
                        </h5>
                    </div>
                </div>
            <% } %>
        </div> 
    </div>
</section>
<!-- // 解答&留言區(管理者) -->